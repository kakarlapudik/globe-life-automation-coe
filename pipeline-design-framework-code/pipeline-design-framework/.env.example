# AWS Credentials Configuration for Pipeline Design Framework
# Copy this file to .env and fill in your actual values

# ============================================
# AWS Account Configuration
# ============================================
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# ============================================
# AWS Credentials (Choose ONE method below)
# ============================================

# Method 1: IAM User Access Keys (Development/Testing)
# Obtain from AWS Console > IAM > Users > Security Credentials
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# Method 2: AWS SSO Profile (Recommended for Enterprise)
# Leave above keys empty and use AWS CLI profile
# AWS_PROFILE=your-sso-profile-name

# Method 3: IAM Role (For EC2/ECS/Lambda execution)
# No credentials needed - uses instance metadata service
# AWS_ROLE_ARN=arn:aws:iam::123456789012:role/YourRoleName

# ============================================
# CDK Configuration
# ============================================
CDK_DEFAULT_ACCOUNT=${AWS_ACCOUNT_ID}
CDK_DEFAULT_REGION=${AWS_REGION}

# Custom CDK Qualifier (max 10 chars, alphanumeric)
# Used to avoid conflicts with other CDK deployments
CDK_QUALIFIER=pipeframe

# ============================================
# Application Configuration
# ============================================
APP_NAME=my-application
STACK_ID=dev
ENVIRONMENT=development

# ============================================
# Pipeline Configuration
# ============================================
SOURCE_REPO=my-repo
SOURCE_BRANCH=main
BUILD_SPEC_PATH=buildspec.yml

# ============================================
# Security Configuration
# ============================================
# Permissions Boundary ARN (Required for enterprise environments)
# Format: arn:aws:iam::ACCOUNT_ID:policy/PolicyName
PERMISSIONS_BOUNDARY_ARN=

# Checkmarx Configuration (Optional)
CHECKMARX_SERVER_URL=
CHECKMARX_USERNAME=
CHECKMARX_PASSWORD=
CHECKMARX_TEAM_NAME=

# SonarQube Configuration (Optional)
SONARQUBE_URL=
SONARQUBE_TOKEN=

# ============================================
# Network Configuration (Optional)
# ============================================
VPC_CIDR=10.0.0.0/16
ENABLE_VPC_ENDPOINTS=true

# ============================================
# Deployment Configuration
# ============================================
# Enable/Disable specific features
ENABLE_SECURITY_SCANNING=true
ENABLE_MULTI_STACK_DEPLOYMENT=true
ENABLE_AUTOMATED_TESTING=true

# Deployment timeout (in minutes)
DEPLOYMENT_TIMEOUT=60

# ============================================
# Logging and Monitoring
# ============================================
LOG_LEVEL=INFO
ENABLE_CLOUDWATCH_LOGS=true
LOG_RETENTION_DAYS=30

# ============================================
# Cost Management
# ============================================
# Tags for cost allocation
COST_CENTER=engineering
PROJECT_CODE=pipeline-framework
OWNER_EMAIL=devops@example.com

# ============================================
# Azure DevOps Integration (Optional)
# ============================================
AZURE_DEVOPS_ORG=your-organization
AZURE_DEVOPS_PROJECT=your-project
AZURE_DEVOPS_PAT=your-personal-access-token

# ============================================
# Notification Configuration (Optional)
# ============================================
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=devops@example.com
SNS_TOPIC_ARN=
